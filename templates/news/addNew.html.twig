{% extends "base.html.twig" %}

{% block title %}Création de new
{% endblock %}
{% block body %}
	<div class="container">
		<div class="col-12">
			{{ form_start(form) }}
			{{ form_errors(form) }}
			<h1 class="text-center my-3">Création d'une news</h1>
			<div class="col-6 offset-3">
				{{ form_row(form.Titre) }}
			</div>
			<div class="col-12">
				{{ form_row(form.Texte) }}
			</div>


			<button type="submit" class="btn btn-primary mt-2 col-4 offset-4">
				<i class="fas fa-save"></i>
				Créer la new !
			</button>

			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}
