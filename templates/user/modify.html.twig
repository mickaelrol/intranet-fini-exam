{% extends 'base.html.twig' %}

{% block title %}Edition du profil de
	{{ user.nom }}
	{{ user.prenom }}
{% endblock %}

{% block body %}
	<div class="container">


		{{ form_start(formView) }}

		{{ form_errors(formView) }}
		<div class="row col-10 offset-1">
			<h1 class="text-center my-3 col-12">Modification du profil de
				{{ user.nom }}
				{{ user.prenom }}</h1>
			<div class="col-12 col-md-6">
				{{ form_row(formView.nom) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.prenom) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.email) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.password) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.num_intervenant) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.TypeDuContrat) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.portable) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(formView.fixe) }}
			</div>
		</div>


		<button type="submit" class="btn btn-primary mt-2 offset-4 col-4">
			<i class="fas fa-save"></i>
			Valider les Modifications
		</button>
	</div>
	{{ form_end(formView) }}

{% endblock %}
